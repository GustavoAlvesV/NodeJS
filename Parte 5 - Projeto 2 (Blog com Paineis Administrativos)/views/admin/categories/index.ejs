<%- include('../../partials/header.ejs');%>

<body>
    <%- include('../../partials/navbar.ejs');%>

    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a href="/admin/categories/new" class="btn btn-success">Criar Nova Categoria</a>
        <hr>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                <% categories.forEach((category) => { %>
                <tr>
                    <th> <%= category.id %></th>
                    <Th><%= category.title %></Th>
                    <th><%= category.slug %></th>
                    <th>
                        
                        <a class="btn btn-primary" href="/admin/categories/edit/<%=category.id%>"> Editar </button></a>

                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>

        </table>
    </div>

</body>


<%- include('../../partials/header.ejs');%>


<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decisao = confirm("Você deseja deletar essa categoria?");
        if(decisao){
            form.submit();
        }
    }
</script>